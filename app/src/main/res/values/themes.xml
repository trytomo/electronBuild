<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockManagement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.StockManagement.Sidebar" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="backgroundColor">@color/black</item>
    </style>

    <style name="Theme.StockManagement.TopBar">
        <item name="android:padding">10dp</item>
        <item name="android:background">#F8F8F9</item>
    </style>

    <style name="Theme.StockManagement.TopBar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Theme.StockManagement.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.StockManagement.Input">

    </style>

    <style name="Theme.StockManagement.Input.Rounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearance">@style/Rounded</item>
    </style>

    <style name="Theme.StockManagement.Button" parent="Widget.MaterialComponents.Button">

    </style>

    <style name="Theme.StockManagement.Button.Rounded" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/Rounded</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>
</resources>